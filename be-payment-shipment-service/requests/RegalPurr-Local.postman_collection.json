          "raw": "{\n  \"order_id\": \"ORDER-12345\",\n  \"carrier\": \"jne\",\n  \"service\": \"REG\",\n  \"origin\": {\n    \"address1\": \"{{origin_address}}\",\n    \"postal_code\": \"{{origin_postal}}\",\n    \"city\": \"\"\n  },\n  \"destination\": {\n    \"address1\": \"Jl. Mawar No. 10\",\n    \"postal_code\": \"15111\",\n    \"city\": \"Tangerang\",\n    \"name\": \"John Doe\",\n    \"phone\": \"08123456789\",\n    \"email\": \"john@example.com\",\n    \"area_id\": \"{{dest_area_id}}\"\n  },\n  \"parcel\": {\n    \"weight_gram\": 1000,\n    \"length_cm\": 10,\n    \"width_cm\": 10,\n    \"height_cm\": 10,\n    \"value_idr\": 0\n  }\n}"
