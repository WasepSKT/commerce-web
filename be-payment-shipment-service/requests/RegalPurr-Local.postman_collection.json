    },
    {
      "name": "Shipping Rates (legacy)",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/api/shipping/rates?to_postal={{to_postal}}&weight={{weight}}&origin_postal={{origin_postal}}",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "shipping",
            "rates"
          ],
          "query": [
            { "key": "to_postal", "value": "{{to_postal}}" },
            { "key": "weight", "value": "{{weight}}" },
            { "key": "origin_postal", "value": "{{origin_postal}}" }
          ]
        }
      }
    },
    {
      "name": "Create Shipment (legacy)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "x-api-key", "value": "{{serviceApiKey}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"order_id\": \"ORDER-12345\",\n  \"provider\": \"jne\",\n  \"service_code\": \"REG\",\n  \"address\": {\n    \"name\": \"John Doe\",\n    \"phone\": \"08123456789\",\n    \"email\": \"john@example.com\",\n    \"address1\": \"Jl. Mawar No. 10\",\n    \"city\": \"Tangerang\",\n    \"postal_code\": \"15111\",\n    \"area_id\": \"{{dest_area_id}}\"\n  },\n  \"parcels\": [\n    {\n      \"weight_gram\": 1000,\n      \"length_cm\": 10,\n      \"width_cm\": 10,\n      \"height_cm\": 10,\n      \"value_idr\": 0\n    }\n  ]\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/shipping/create-shipment",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "shipping",
            "create-shipment"
          ]
        }
      }
    },
    {
      "name": "Shipping Rates (new)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"origin\": {\n    \"address1\": \"{{origin_address}}\",\n    \"postal_code\": \"{{origin_postal}}\",\n    \"city\": \"\"\n  },\n  \"destination\": {\n    \"address1\": \"\",\n    \"postal_code\": \"{{to_postal}}\",\n    \"city\": \"\",\n    \"area_id\": \"{{dest_area_id}}\"\n  },\n  \"parcel\": {\n    \"weight_gram\": {{weight}}\n  }\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/shipping/rates",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "shipping",
            "rates"
          ]
        }
      }
    },
